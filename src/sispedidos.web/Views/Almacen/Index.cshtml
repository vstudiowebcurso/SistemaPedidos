@model sispedidos.web.Models.AlmacenViewModel

@{
    ViewData["Title"] = "Lista de Almacenes";
}

@*<h1>
        Materiales
    </h1>*@

<h2 class="text-center text-success">Listado de Almacenes</h2>

@if (Model.ExistenAlmacenes)
{
    <table class="table table-hover table-striped">
        <thead>
            <tr class="bg-primary">
                @*<th>
                        @Html.DisplayNameFor(model => model.Materiales[0].Nombre)
                    </th>*@
                <th>Código</th>
                <th>Nombre</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var almacen in Model.Almacenes)
            {
                <tr>
                    <td>@Html.DisplayFor(model => almacen.Codalm)</td>
                    <td>@Html.DisplayFor(model => almacen.Nomalm)</td>
                    <td><a class="btn btn-info" href="~/Almacen/@Html.DisplayFor(model => almacen.Id)"><span class="glyphicon glyphicon-edit"></span></a></td>
                </tr>

            }
        </tbody>

    </table>

}
else
{
    <p>No existen Almacenes</p>
}
